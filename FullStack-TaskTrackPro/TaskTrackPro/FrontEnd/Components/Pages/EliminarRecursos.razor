@page "/eliminar-recursos"
@using Dtos
@using Servicios
@inject ServicioRecurso ServicioRecurso
@inject NavigationManager NavigationManager

<h3>Eliminar Recursos sin Asignación</h3>

@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger">@mensajeError</div>
}

@if (recursosNoAsignados is null)
{
    <p>Cargando recursos...</p>
}
else if (!recursosNoAsignados.Any())
{
    <p>No hay recursos sin asignación a proyectos.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Funcionalidad</th>
            <th>Capacidad</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var recurso in recursosNoAsignados)
        {
            <tr>
                <td>@recurso.Id</td>
                <td>@recurso.Nombre</td>
                <td>@recurso.Descripcion</td>
                <td>@recurso.Funcionalidad</td>
                <td>@recurso.Capacidad</td>
                <td>
                    <button class="btn btn-sm btn-primary me-2"
                            @onclick="@(() => EditarRecurso(recurso.Id))">
                        Editar
                    </button>

                    <button class="btn btn-sm btn-danger"
                            @onclick="@(() => EliminarRecurso(recurso.Id))">
                        Eliminar
                    </button>
                </td>

            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<RecursoDto> recursosNoAsignados = new();
    private string? mensajeError;

    protected override void OnInitialized()
    {
        CargarRecursos();
    }

    private void CargarRecursos()
    {
        try
        {
            recursosNoAsignados = ServicioRecurso
                .TraerTodosLosRecursosDelSistema()
                .Where(r => r.ProyectoNombre == null) 
                .ToList();
        }
        catch (Exception ex)
        {
            mensajeError = ex.Message;
        }
    }

    private void EliminarRecurso(int id)
    {
        try
        {
            ServicioRecurso.EliminarRecursoPorId(id);
            CargarRecursos();
        }
        catch (Exception ex)
        {
            mensajeError = ex.Message;
        }
    }
    
    private void EditarRecurso(int id)
    {
        NavigationManager.NavigateTo($"/editar-recurso/{id}");
    }

}
