@page "/crear-proyecto"
@using Servicios
@using Dtos
@inject ServicioProyecto ProyectoServicio;
@inject ServicioUsuario UsuarioServicio;
@inject NavigationManager NavigationManager


<h3>CrearProyecto</h3>

@if (exito)
{
    <div class="alert alert-success">
        Proyecto creado correctamente.
    </div>
}
else if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger">
        @mensajeError
    </div>
}

<div class="row">
    <div class="col-4">
        <h5>Miembros Disponibles</h5>
        @if (usuariosMiembro is null)
        {
            <p><em>Cargando…</em></p>
        }
        else if (!usuariosMiembro.Any())
        {
            <p>No hay miembros de proyecto.</p>
        }
        else
        {
            <ul class="list-group mb-3">
                @foreach (var u in usuariosMiembro)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <div>
                            <strong>@u.Nombre</strong><br />
                            <small>@u.Email</small>
                        </div>
                        <button class="btn btn-sm btn-primary"
                                @onclick="() => OnAgregarMiembro(u)">
                            +
                        </button>
                    </li>
                }
            </ul>
        }

        <h5>Miembros Seleccionados</h5>
        @if (!nuevoProyecto.MiembrosProyecto.Any())
        {
            <p><em>No has añadido miembros aún.</em></p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var m in nuevoProyecto.MiembrosProyecto)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <div>
                            <strong>@m.Nombre</strong><br />
                            <small>@m.Email</small>
                        </div>
                        <button class="btn btn-sm btn-danger"
                                @onclick="() => OnQuitarMiembro(m)">
                            ×
                        </button>
                    </li>
                }
            </ul>
        }

        <h5>Líder del Proyecto</h5>
        @if (usuariosLideres is null)
        {
            <p><em>Cargando…</em></p>
        }
        else if (!usuariosLideres.Any())
        {
            <div class="alert alert-warning">No hay usuarios disponibles con rol Líder de Proyecto.</div>
        }
        else
        {
            <ul class="list-group">
                @foreach (var u in usuariosLideres)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <div>
                            <strong>@u.Nombre</strong><br />
                            <small>@u.Email</small>
                        </div>
                        <button class="btn btn-sm btn-primary"
                                @onclick="() => OnSeleccionarLider(u)">
                            Seleccionar
                        </button>
                    </li>
                }
            </ul>
        }

        @if (nuevoProyecto.LiderProyecto is not null)
        {
            <div class="mt-3 alert alert-info">
                <strong>Líder seleccionado:</strong> @nuevoProyecto.LiderProyecto.Nombre (@nuevoProyecto.LiderProyecto.Email)
            </div>
        }
    </div>
    <div class="col-8">
        <EditForm Model="nuevoProyecto" OnValidSubmit="HandleCrearProyecto">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <InputText class="form-control" @bind-Value="nuevoProyecto.NombreProyecto" />
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <InputTextArea class="form-control"
                               @bind-Value="nuevoProyecto.DescripcionProyecto"
                               maxlength="400"
                               rows="5" />
                <div class="form-text">@($"{nuevoProyecto.DescripcionProyecto?.Length ?? 0}/400 caracteres")</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Fecha de Inicio Estimada</label>
                <InputDate class="form-control" @bind-Value="nuevoProyecto.FechaInicio" />
            </div>

            <button type="submit" class="btn btn-success">Crear Proyecto</button>
            <button type="button" class="btn btn-secondary ms-2"
                    @onclick='() => NavigationManager.NavigateTo("/menu")'>
                Cancelar
            </button>
        </EditForm>
    </div>
</div>


@code {
    private ProyectoDto nuevoProyecto = new();
    private List<UsuarioDto> usuariosMiembro;
    private List<UsuarioDto> usuariosLideres;

    
    private bool exito;
    private string mensajeError = "";
    protected override void OnInitialized()
    {
        nuevoProyecto.FechaInicio = DateTime.Today;
        usuariosMiembro = UsuarioServicio.TraerTodosLosUsuariosMiembros();
        nuevoProyecto.MiembrosProyecto = new List<UsuarioDto>();
        usuariosLideres = UsuarioServicio.TraerTodosLosUsuariosLideres();
    }
    
    private void HandleCrearProyecto()
    {
        mensajeError = "";
        exito = false;
        
        if (nuevoProyecto.LiderProyecto == null)
        {
            mensajeError = "Debe seleccionar un líder para el proyecto.";
            return;
        }
        
        try
        {
            ProyectoServicio.CrearProyecto(nuevoProyecto);
            exito = true;
            NavigationManager.NavigateTo("/menu");
        }
        catch (ArgumentException ex)
        {
            mensajeError = ex.Message;
        }
        catch (Exception ex)
        {
            mensajeError = "Error inesperado: " + ex.Message + " - Inner: " + ex.InnerException?.Message;
        }



    }
    
    private void OnAgregarMiembro(UsuarioDto u)
    {
        if (!nuevoProyecto.MiembrosProyecto.Any(m => m.Email == u.Email))
            nuevoProyecto.MiembrosProyecto.Add(u);
    }
    
    private void OnQuitarMiembro(UsuarioDto u)
    {
        nuevoProyecto.MiembrosProyecto.RemoveAll(m => m.Email == u.Email);
    }
    
    private void OnSeleccionarLider(UsuarioDto u)
    {
        nuevoProyecto.LiderProyecto = u;
    }
}